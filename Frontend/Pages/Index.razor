@page "/"

<PageTitle>Home</PageTitle>

<div class="home-container">
    <h1 class="title">Bem-vindo à Gestão de Eventos e Participantes</h1>

    <p class="description">Este é um sistema de gestão de eventos e participantes, permitindo que os organizadores criem e gerenciem eventos, enquanto os participantes se registram e gerenciam suas inscrições.</p>

    <div class="event-list">
        <h2 class="subtitle">Próximos Eventos</h2>

        @if (Eventos != null && Eventos.Any())
        {
            @foreach (var evento in Eventos)
            {
                <div class="event-item">
                    <h3 class="event-title">@evento.Nome</h3>
                    <p class="event-details"><strong>Data:</strong> @evento.Data.ToString("dd/MM/yyyy")</p>
                    <p class="event-details"><strong>Local:</strong> @evento.Local</p>
                    <p class="event-description">@evento.Descricao</p>
                    <p class="event-details"><strong>Capacidade Máxima:</strong> @evento.CapacidadeMaxima</p>
                    <p class="event-details"><strong>Preço do Ingresso:</strong> @evento.PrecoIngresso</p>
                </div>
            }
        }
        else
        {
            <p>Nenhum evento próximo encontrado.</p>
        }
    </div>
</div>

<style>
    .home-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px 20px;
        text-align: center;
    }

    .title {
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .description {
        font-size: 16px;
        color: #555;
        margin-bottom: 40px;
    }

    .subtitle {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .event-item {
        background-color: #f9f9f9;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 20px;
        margin-bottom: 20px;
        text-align: left;
    }

    .event-title {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .event-details {
        font-size: 16px;
        margin-bottom: 5px;
    }

    .event-description {
        font-size: 16px;
        color: #555;
        margin-bottom: 10px;
    }
</style>


